Package: compboost
Type: Package
Title: C++ Implementation of Componentwise Boosting
Version: 0.1.0
Authors@R: c(
  person(given = "Daniel", family = "Schalk", email = "daniel.schalk@stat.uni-muenchen.de", role = c("aut", "cre"), comment = c(ORCID = "0000-0003-0950-1947")),
